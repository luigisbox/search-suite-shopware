<?xml version="1.0" encoding="utf-8"?>
<cronjobs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/shopware/5.3/engine/Shopware/Components/Plugin/schema/cronjob.xsd">

    <cronjob>
        <name>Send Products to Luigi's Box api</name>
        <action>Shopware_CronJob_SendToLuigisBoxApi</action>
        <active>true</active>
        <interval>86400</interval>
        <disableOnError>false</disableOnError>
    </cronjob>

    <cronjob>
        <name>Update last changed products for Luigi's Box api</name>
        <action>Shopware_CronJob_UpdateLuigisBoxApi</action>
        <active>true</active>
        <interval>300</interval>
        <disableOnError>false</disableOnError>
    </cronjob>
</cronjobs>
